pipeline {
    agent any
    stages {
        parallel(
            stage('Clear') {
                steps {
                    sh 'rm -r allure-results'
                }
            }
            stage('Build') {
                steps {
                    sh 'mvn install -DskipTests'
                }
            }
        )
        stage('Test') {
            steps {
                sh "mvn test -Dgroups='${Tag}'"
            }
        }
    }
    post {
        always {
            allure([
                    includeProperties: false,
                    jdk: '',
                    properties: [],
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: 'allure-results']]
            ])
        }
    }
}